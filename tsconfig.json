{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./types",

    "removeComments": true,

    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": false,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
